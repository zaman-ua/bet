<!DOCTYPE html>
<html>
<head>
    <meta charset="{{ env('APP_CHARSET', 'UTF-8') }}" />
    <title>{% block title %}{{ env('APP_TITLE', 'Bet placing') }}{% endblock %}</title>

    <script src="{{ assets('assets/css/main.css') }}"></script>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ assets('favicon.ico') }}" />
</head>
<body>

<a href="/">Главная</a>
{% if isLoggedIn() %}
    <a href="/users/logout">Выход</a>
{% else %}
    <a href="/users/login">Авторизация</a>
    <a href="/users/registration">Регистрация</a>
{% endif %}

{% block body %}{% endblock %}

<script src="{{ assets('assets/js/jquery.min.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>